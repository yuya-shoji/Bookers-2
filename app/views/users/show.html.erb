<div class="container">
    <div class="row">
    	<div class="col-md-3">
			<%= render 'layouts/user_info', book: @book, user: @user %>
		</div>

		<div class="col-md-8 offset-md-1">
			<h2>Books</h2>
			    	<table class="table">
			      		<thead>
			        		<tr>
			          			<th></th>
			          			<th>title</th>
			          			<th>opinion</th>
			          			<th colspan="3"></th>
			        		</tr>
	                    </thead>

	                    <tbody>
						  	<% @books.reverse_each do |book| %>
	                             <tr>
	                             <%= link_to user_path(@user.id) do %>
	                             <td><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
	                             <% end %>
	                             <td><%=link_to book.title, book_path(book.id)%></td>
	                             <td><%= book.body %></td>
	                             </tr>
	                             <% end %>
	                             </table>
					     	</tr>
			    		</tbody>
			      	</table>
		</div>
	</div>
</div>

