<div class="container">
    <div class="row">
    	<div class="col-md-3">
			<%= render 'layouts/user_info', book: @book, user: @user %>
		</div>
		<div class="col-md-8 offset-md-1">
		<h2>Users</h2>
		    	<table class="table-hover table-inverse">
		      		<thead>
		        		<tr>
		          			<th></th>
		          			<th>image</th>
		          			<th>name</th>
		          			<th colspan="3"></th>
		        		</tr>
                    </thead>

                    <tbody>
					  	<% @users.reverse_each do |user| %>
                             <tr>
                             <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
                             <td><%= user.name %></td>
                             <td><%= link_to "Show", user_path(user.id) %></td>
                             </tr>
                             <% end %>
                             </table>
				     	</tr>
		    		</tbody>
		      	</table>
		</div>
		</div>
		</div>

		<div class="container mt-5">
		<div class="row">
		<div class="mx-auto">
		      <p>CopyRight Infratop.inc</p>
		</div>
  	</div>
</div>