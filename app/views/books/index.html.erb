<%= render 'layouts/error', book: @book %>
	<div class="container">
    <div class="row">
    	<div class="col-md-3">
			<%= render 'layouts/user_info', book: @book, user: @user %>
			</div>
			<div class="col-md-8 offset-md-1">
			<h2>Books</h2>
		    	<table class="table table-hover table-inverse">
		      		<thead>
		        		<tr>
		          			<th></th>
		          			<th>title</th>
		          			<th>opinion</th>
		          			<th colspan="3"></th>
		        		</tr>
		    		</thead>
		    		<tbody>
					  	<% @books.reverse_each do |book| %>
						<tr>
				      		<td><%= link_to user_path(book.user_id) do %>
				      			<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format:'jpeg', fallback: "no_image.jpg" %></td>
				      			<% end %>
				        	<td><%= link_to book.title, book, class: "" %></td>
				        	<td><%= book.body %></td>
				     	</tr>
		        	  	<% end %>
		    		</tbody>
		      	</table>
			</div>
		</div>
	</div>

<div class="container mt-5">
	<div class="row">
		<div class="mx-auto">
		      <p>CopyRight Infratop.inc</p>
		</div>
  </div>
</div>